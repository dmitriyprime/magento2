<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="dmitriyprime_vendors" resource="default" engine="innodb" comment="Vendors Table">
        <column xsi:type="smallint" name="entity_id" unsigned="true" nullable="false" identity="true"
                comment="Vendor ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Vendor Name"/>
        <column xsi:type="varchar" name="address" nullable="false" length="255" comment="Vendor Address"/>
        <column xsi:type="varchar" name="phone" nullable="false" length="255" comment="Vendor Phone"/>
        <column xsi:type="varchar" name="email" nullable="false" length="255" comment="Vendor Email"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
    <table name="dmitriyprime_vendors_link" resource="default" engine="innodb" comment="Vendors Link Table">
        <column xsi:type="smallint" name="vendor_id" unsigned="true" nullable="false" identity="false"
                comment="Vendor ID"/>
        <column xsi:type="int" name="product_id" unsigned="true" nullable="false" identity="false"
                default="0" comment="Product ID"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="vendor_id"/>
            <column name="product_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="DMITRIYPRIME_VENDORS_VENDOR_ID_ENTITY_ID"
                    table="dmitriyprime_vendors_link" column="vendor_id"
                    referenceTable="dmitriyprime_vendors" referenceColumn="entity_id" onDelete="CASCADE"/>
            <constraint xsi:type="foreign" referenceId="DMITRIYPRIME_VENDORS_PRD_ID_CAT_PRD_ENTT_ENTT_ID"
                    table="dmitriyprime_vendors_link" column="product_id"
                    referenceTable="catalog_product_entity" referenceColumn="entity_id" onDelete="CASCADE"/>
        <constraint xsi:type="unique" referenceId="DMITRIYPRIME_VENDORS_VENDOR_ID_PRODUCT_ID">
            <column name="vendor_id"/>
            <column name="product_id"/>
        </constraint>
        <index referenceId="DMITRIYPRIME_VENDORS_PRODUCT_ID" indexType="btree">
            <column name="product_id"/>
        </index>
    </table>
</schema>
