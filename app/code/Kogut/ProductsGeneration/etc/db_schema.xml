<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="kogut_products_generation" resource="default" engine="innodb" comment="Products Generation Table">
        <column xsi:type="smallint" name="entity_id" unsigned="false" nullable="false" identity="true"
                comment="Item ID"/>
        <column xsi:type="smallint" name="category_id" nullable="false" unsigned="false" identity="false"
                comment="Category ID to assign the products"/>
        <column xsi:type="smallint" name="qty" nullable="false" unsigned="false" identity="false"
                comment="Quantity of products to generate"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
</schema>
